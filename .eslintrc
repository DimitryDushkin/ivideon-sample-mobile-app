{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            2,
            4,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0,
        "react/react-in-jsx-scope": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "globals": {
        "appState": true,
        "fetch": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}
